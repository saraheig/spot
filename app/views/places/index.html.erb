<p id="notice"><%= notice %></p>

<div class="title is-4 has-text-centered"><%= t('general.title') %></div>
<% if false %>
  <div class="button is-info">
    <%= link_to t('buttons.new'), new_place_path %>
  </div>
<% end %>

<% @places.each do |place| %>
  <br>
  <div class="card">
    <%= link_to place do %>
      <div class="card-content">
        <div class="media">
          <div class="media-content">
            <p class="title is-5"><%= place.title %></p>
            <p class="subtitle is-6"><%= place.description %></p>
            <p class="subtitle is-6"><%= place.schedule %></p>
          </div>
          <div class="media-right">
            <figure class="image is-128x128">
              <img src="https://bulma.io/images/placeholders/128x128.png" alt="Placeholder image">
            </figure>
          </div>
        </div>
      </div>
      <footer class="card-footer">
        <div class="card-footer-item"><%= place.price %> <%= t('place.price_unit') %></div>
        <div class="card-footer-item"><%= place.duration %> <%= t('place.duration_unit') %></div>
      </footer>
    <% end %>
  </div>
<% end %>
