<h1><%= t('general.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('place.title') %></th>
      <th><%= t('place.description') %></th>
      <th><%= t('place.price') %></th>
      <th><%= t('place.duration') %></th>
      <th><%= t('place.schedule') %></th>
      <th><%= t('place.lat') %></th>
      <th><%= t('place.lng') %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.title %></td>
        <td><%= place.description %></td>
        <td><%= place.price %></td>
        <td><%= place.duration %></td>
        <td><%= place.schedule %></td>
        <td><%= place.lat %></td>
        <td><%= place.lng %></td>
        <td><%= link_to t('buttons.show'), place %></td>
      </tr>
    <% end %>
  </tbody>
</table>

