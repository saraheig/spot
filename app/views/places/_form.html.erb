<%= form_with(model: place, local: true) do |form| %>
  <% if place.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('errors.template', :count => place.errors.count) %></h2>
      <ul>
      <% place.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label t('place.title') %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label t('place.description') %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label t('place.price') %>
    <%= form.text_field :price %>
  </div>

  <div class="field">
    <%= form.label t('place.duration') %>
    <%= form.number_field :duration %>
  </div>

  <div class="field">
    <%= form.label t('place.schedule') %>
    <%= form.text_area :schedule %>
  </div>

  <div class="field">
    <%= form.label t('place.lat') %>
    <%= form.text_field :lat %>
  </div>

  <div class="field">
    <%= form.label t('place.lng') %>
    <%= form.text_field :lng %>
  </div>

  <div class="actions">
    <%= form.submit t('buttons.create') %>
  </div>
<% end %>
